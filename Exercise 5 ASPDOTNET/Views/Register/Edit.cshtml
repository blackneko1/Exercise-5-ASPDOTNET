@{
    ViewData["Title"] = "Update Info";
}
<h2>Update Form</h2>
<form asp-action="edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label class="form-label">First Name</label>
        <input class="form-control" asp-for="Firstname" />
        <span class="text-danger" asp-validation-for="Firstname"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Last Name</label>
        <input class="form-control" asp-for="Lastname" />
        <span class="text-danger" asp-validation-for="Lastname"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Address</label>
        <input class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Contact Number</label>
        <input class="form-control" asp-for="ContactNumber" />
        <span class="text-danger" asp-validation-for="ContactNumber"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Gender</label>
        <input class="form-control" asp-for="Gender" />
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Email Address</label>
        <input class="form-control" asp-for="EmailAddress" />
        <span class="text-danger" asp-validation-for="EmailAddress"></span>
    </div>
    <div class="form-group">
        <label class="form-label">School Campus</label>
        <input class="form-control" asp-for="SchoolCampus" />
        <span class="text-danger" asp-validation-for="SchoolCampus"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Department</label>
        <input class="form-control" asp-for="Department" />
        <span class="text-danger" asp-validation-for="Department"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>

</form>